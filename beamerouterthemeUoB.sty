%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
% Footline
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\defbeamertemplate*{footline}{UoB theme}{
	\begin{beamercolorbox}[wd=\paperwidth,ht=10 pt,center, leftskip=0.5cm,dp=7ex]{structure.fg}%
		\tiny\color{UoB@footnote}\inserttitle \hspace*{\fill}\color{UoB@footnote}\insertframenumber \hspace*{\fill} 
	\end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
% Headline
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\defbeamertemplate*{headline}{UoB headline}{
	\begin{beamercolorbox}[wd=\paperwidth,ht=35 pt,center, leftskip=2.5cm,dp=5ex]{structure.fg}%
		\hspace*{\fill} \hspace*{\fill} \hspace*{\fill} \hspace*{\fill} \hspace*{\fill} \hspace*{\fill} \color{UoB@footnote}\insertdate\par
	\end{beamercolorbox}
}


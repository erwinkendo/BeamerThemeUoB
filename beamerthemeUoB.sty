%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
% Background 
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\setbeamertemplate{background canvas}{%
	\includegraphics[width=\paperwidth,height=\paperheight]{logo.eps}
}
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
% Footline
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\defbeamertemplate*{footline}{UoB theme}{
	\begin{beamercolorbox}[wd=\paperwidth,ht=10 pt,center, leftskip=0.5cm,dp=7ex]{structure.fg}%
		\tiny\color{UoB@footnote}\inserttitle \hspace*{\fill}\color{UoB@footnote}\insertframenumber \hspace*{\fill} 
	\end{beamercolorbox}
}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
% Headline
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\defbeamertemplate*{headline}{UoB headline}{
	\begin{beamercolorbox}[wd=\paperwidth,ht=35 pt,center, leftskip=2.5cm,dp=5ex]{structure.fg}%
		\hspace*{\fill} \hspace*{\fill} \hspace*{\fill} \hspace*{\fill} \hspace*{\fill} \hspace*{\fill} \color{UoB@footnote}\insertdate\par
	\end{beamercolorbox}
}

\makeatother

\makeatletter

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%
% Color definitions
%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%


\definecolor{UoB@title}{RGB}{154,29,44}
\definecolor{UoB@footnote}{RGB}{137,137,137}

\mode<presentation>


\setbeamercolor{structure}{fg=UoB@title}

\setbeamercolor{section in head/foot}{parent=structure}

\setbeamercolor{block title}{fg=white,bg=UoB@title}
\setbeamercolor{block title alerted}{fg=alerted text.fg,bg=alerted text.fg!10!bg}
\setbeamercolor{block title example}{fg=example text.fg,bg=example text.fg!10!bg}

\mode<all>

